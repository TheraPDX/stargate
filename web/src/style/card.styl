.card__
	&list
		@extend .flex, .flex-row;
	&container
		@extend .flex, .flex-column;
		padding .5%
		border-radius 3px
		border 1px solid color-grey-light
		text-decoration none
		&, 
		[class*="icono"]
			@extend .color-dark;
		a&:hover
			@extend .bg-grey;
			&, 
			[class*="icono"]
				@extend .color-white;

	&header
		text-align center